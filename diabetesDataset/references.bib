@article{yuan_2024,
title = {Fine mapping-based multi-omics analysis interprets the gut-lung axis function of {SGLT2} inhibitors.},
author = {Yuan, Fengqin and Zhang, Tianlong and Jia, Sixiang and Zhao, Jianqiang and Wan, Binbin and Liu, Gang},
