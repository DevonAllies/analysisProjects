@article{chegou_2009,
title = {Host markers in {QuantiFERON} supernatants differentiate active {TB} from latent {TB} infection: preliminary report.},
author = {Chegou, Novel N and Black, Gillian F and Kidd, Martin and van Helden, Paul D and Walzl, Gerhard},
pages = {21},
url = {http://dx.doi.org/10.1186/1471-2466-9-21},
